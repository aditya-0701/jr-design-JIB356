{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-trailing-spaces": 1,
        "no-mixed-spaces-and-tabs": 1,
        "no-var": 0,
        "space-in-parens": 0,
        "semi": [2, "always"]
    }
}
